<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.BattleFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Who Will Win?"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHero1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Finding opponent..."
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivHero1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnHero1Win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Winner" />

            <TextView
                android:id="@+id/tvIntelligence1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Intelligence: ?" />

            <TextView
                android:id="@+id/tvStrength1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Strength: ?" />

            <TextView
                android:id="@+id/tvSpeed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Speed: ?" />

            <TextView
                android:id="@+id/tvDurability1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Durability: ?" />

            <TextView
                android:id="@+id/tvPower1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Power: ?" />

            <TextView
                android:id="@+id/tvCombat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Combat: ?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHero2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Finding opponent..."
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivHero2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnHero2Win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Winner" />

            <TextView
                android:id="@+id/tvIntelligence2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Intelligence: ?" />

            <TextView
                android:id="@+id/tvStrength2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Strength: ?" />

            <TextView
                android:id="@+id/tvSpeed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Speed: ?" />

            <TextView
                android:id="@+id/tvDurability2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Durability: ?" />

            <TextView
                android:id="@+id/tvPower2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Power: ?" />

            <TextView
                android:id="@+id/tvCombat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Combat: ?" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Winner is ..."
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNewBattle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="New Battle" />

</LinearLayout>

